# ============================================================================
# 1. CORE MARKETPLACE INFRASTRUCTURE
# ============================================================================

# Application Base Configuration
VITE_APP_NAME="Savanna Marketplace"
VITE_APP_URL="https://savanna-marketplace.com"
VITE_APP_ENV="development"
VITE_APP_VERSION="1.0.0"

# AWS Configuration (Nairobi/Kenya-East Region)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="af-south-1"
AWS_S3_BUCKET="savanna-marketplace-assets"
AWS_LAMBDA_REGION="af-south-1"

# Supabase Configuration (PostgreSQL DB + Auth)
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# Docker & Kubernetes
DOCKER_REGISTRY="registry.digitalocean.com/savanna-marketplace"
K8S_NAMESPACE="savanna-production"

# ============================================================================
